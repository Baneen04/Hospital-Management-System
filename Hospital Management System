void Admin::Addadmin() {
	
	system("cls");
	char op;
		ofstream afile;
	afile.open("Admin.txt", ios::app);
	if (!afile) {
		cout << "No file";
	}
	else {
	jump:
	Node* newNode = new Node;
	cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<60; i++){cout << char(205);}     cout << char(191) << endl;
				cout <<"\t\t"<< char(186) << "                                                            " << char(186) << endl;
				cout <<"\t\t"<< char(186) << "              HOSPITAL MANAGEMENT SYSTEM                    " << char(186) << endl;
				cout <<"\t\t" << char(186)<< "                                                            " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout<<"\t\t" << char(186) << "                  Enter Admin Id: ";cin >> newNode->aid;
				afile<<newNode->aid<<endl;
				cout <<"\t\t"<< char(186) << "                                                            " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2   
        		cout <<"\t\t"<< char(186) << "                                                            " <<  endl;
				cout <<"\t\t"<< char(186) << "                  Enter Admin name : ";cin >> newNode->aname;
				afile<<newNode->aname<<endl;
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3  
        		cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(186) << "                  Enter Admin Last name : ";cin >> newNode->alastname;
				afile<<newNode->alastname<<endl;
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;

	if (head == NULL)
	{
		head = newNode;
		newNode->next = NULL;

	}
	else
	{
		Node* temp = head;
		while (temp->next != NULL)
		{
			temp = temp->next;
		}
		temp->next = newNode;
		newNode->next = NULL;
	}
		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
		cout <<"\t\t"<< char(186) << "                  Do u want to enter another record y/n : ";cin >> op;
		cout <<"\t\t"<< char(186) << "                                                      " << endl;
		cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
	if (op == 'y' || op == 'Y') {

		goto jump;
	}
	else {
		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
		cout <<"\t\t"<< char(186) << "       Admin record has been save successfully :      "<<endl;
		cout <<"\t\t"<< char(186) << "                                                      " << endl;
		cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
        		s();
	}}
	waitForEnter();
}
