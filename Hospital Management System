void waitForEnter(void){
            cout<<"\n\n\n\t\t Press enter to go back \n\n";
            cin.get();
            cin.get();
            system("cls");
        }
class Node
{
	public:
//For Patient
string pname;
string plname;
string pno;
string pblood;
int p_age,pid;
//For Doctors
int did;
string time,dno;
string dname;
string dlastname;
string dpost;
string appointment;
string data;
int dsal;
int dexp;
//Appoinment 
string name,apname;
int id;
//For Receptionist
string rname;
string rlastname;
string rno;
int rid;
int rsal;
int rexp;
//For Admin
string aname;
string alastname;
string ano;
int aid;
int asal;
int aexp;
char op;
Node *next;
Node(){
	appointment = "Available";
    dsal=50000;
    dexp=5;
    rsal=25000;
    rexp=3;
    asal=45000;
    aexp=2;

}
};
Node *head=NULL;
Node *top=NULL;
Node*front=NULL;
Node*rear=NULL;
