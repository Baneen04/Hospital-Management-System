class Receptionist:public Patient{
	public:
		void Addreceptionist();
		void showreceptionist();
		void receptionist_menue(); 
		void searchreceptionist();
		void update_receptionist();
};

void Receptionist::Addreceptionist() {
	system("cls");
	char op;
		ofstream rfile;
	rfile.open("Receptionist.txt", ios::app);
	if (!rfile) {
		cout << "No file";
	}
	else {
	jump:
	Node* newNode = new Node;
	cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<60; i++){cout << char(205);}     cout << char(191) << endl;
				cout <<"\t\t"<< char(186) << "                                                            " << char(186) << endl;
				cout <<"\t\t"<< char(186) << "              HOSPITAL MANAGEMENT SYSTEM                    " << char(186) << endl;
				cout <<"\t\t" << char(186)<< "                                                            " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout<<"\t\t" << char(186) << "                  Enter Receptionist Id: ";cin >> newNode->rid;
				rfile<< newNode->rid<<endl;
				cout <<"\t\t"<< char(186) << "                                                            " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2   
        		cout <<"\t\t"<< char(186) << "                                                            " <<  endl;
				cout <<"\t\t"<< char(186) << "                  Enter Receptionist name : ";cin >> newNode->rname;
				rfile<< newNode->rname<<endl;
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3  
        		cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(186) << "                  Enter Receptionist Last name :  ";cin >> newNode->rlastname;
				rfile<< newNode->rlastname<<endl;
				cout <<"\t\t"<< char(186) << "                                                            "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;

	if (head == NULL)
	{
		head = newNode;
		newNode->next = NULL;

	}
	else
	{
		Node* temp = head;
		while (temp->next != NULL)
		{
			temp = temp->next;
		}
		temp->next = newNode;
		newNode->next = NULL;
	}
		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
		cout <<"\t\t"<< char(186) << "                  Do u want to enter another record y/n : ";cin >> op;
		cout <<"\t\t"<< char(186) << "                                                      " << endl;
		cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
	if (op == 'y' || op == 'Y') {

		goto jump;
	}
	else {
		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
		cout <<"\t\t"<< char(186) << "       Receptionist record has been save successfully : "<<endl;
		cout <<"\t\t"<< char(186) << "                                                      " << endl;
		cout <<"\t\t"<< char(192);  for(int i=0; i<60; i++){cout << char(205);}    cout << char(217) << endl;
        		s();
	}}
	waitForEnter();
}
void Receptionist::showreceptionist() {
	int id;
	string name,lname;
	system("cls");
	Node* temp = head;s();
	if(head==NULL)
	cout<<endl<<endl<<"\t\tNo Record found"<<endl<<endl;
	else{
			ifstream rfile;
	rfile.open("Receptionist.txt", ios::in);
	if (!rfile) {
		cout << "File Not Found: " << endl;
		rfile.close();
	}
	else {
		rfile>>id>>name>>lname;
	temp->rid=id;
	temp->rname=name;
	temp->rlastname=lname;
	while (temp != NULL)
	{
		
				cout<<"\t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ;
				cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout<<"\t\t" << char(186) << "         Receptionist DETAIL                          " << char(186) << endl;
				cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout<<"\t\t" << char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
		    	cout <<"\t\t"<< char(186) << "                                                      " << char(186) << endl;
				cout<<"\t\t" << char(186) << "         Receptionist Id is : " << temp->rid << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(186) << "         Name is : " << name  << endl;
