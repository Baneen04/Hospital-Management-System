				cout <<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout<<"\t\t" << char(186) << "   Name:         "<<name<<"                      " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2  
        		cout <<"\t\t"<< char(186) << "                                                      " <<  endl;
				cout <<"\t\t"<< char(186) << "   ID:           "<<id<<"                    "<<   endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3   
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Salary:       "<<temp->asal<<"                    " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				//enter 4
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Experience:   "<<temp->aexp<<"                      "  << endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				found++;
			}
			temp = temp->next;
		}
		if (found==0)
		{
			cout << "Record Not found " << endl;
		}
	}}
	waitForEnter();
}

void Admin::update_admin() {
	int found = 0;
	int up;
	int id;
	string name,lname;
	cout << "Enter value for update : " << endl;
	cin >> up;
	if (head == NULL)
	{
		cout << "Linked List Is empty : " << endl;
	}
	else
	{
		
			fstream afile;
	afile.open("Admin.txt", ios::in);
	if (!afile) {
		cout << "File Not Found: " << endl;
		afile.close();
	}
	else {
		afile>>id>>name>>lname;
		Node* temp = head;
		while (temp != NULL)
		{

			if (up == id)
			{
				cout << "Enter Admin Id: " << endl;
				cin >> temp->aid;
				afile<<temp->aid;
				cout << "Enter name : " << endl;
				cin >> temp->aname;
				afile<<temp->aname;
				cout << "Enter Last name : " << endl;
				cin >> temp->alastname;
				afile<<temp->alastname;
				cout << "Enter Your Number : " << endl;
				cin >> temp->ano;
				found++;
			}
			temp = temp->next;
		}
}
	}
}
