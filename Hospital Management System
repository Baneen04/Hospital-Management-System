				cout <<"\t\t"<< char(186) << "                  Enter patient blood Group : ";cin >> newNode->pblood;
				pfile<<newNode->pblood<<endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
    if (newNode->pblood == "A+" || newNode->pblood =="a+" ||newNode->pblood == "b+" || 
		newNode->pblood == "B+"|| newNode->pblood == "AB+" || newNode->pblood == "ab+"||
		newNode->pblood == "O+" || newNode->pblood == "o+" || 
		newNode->pblood == "O-" || newNode->pblood == "o-")
	{
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "                  Blood group is ok :                 "<<endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
			

	}
	else {
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "                  This blood group is not exist       "  <<endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				//cout << "This blood group is not exist : " << endl;
	}

	
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "                   Enter Your Number : ";cin >> newNode->pno;
				pfile<<newNode->pno<<endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
	if (head==NULL)
	{
		head = newNode;
		newNode->next = NULL;
		
	}
	else
	{
		Node* temp = head;
		while (temp->next!=NULL)
		{
			temp = temp->next;
		}
		temp->next = newNode;
		newNode->next = NULL;
	}
	}
	s();
waitForEnter();
}
}

void Patient::searchpatient() {
	int s;
	string name,lname,no,bgrp;
	int id,age;
	int found = 0;
	cout << "Enter your value to search : " << endl;
	cin >> s;

	if (head==NULL)
	{
		cout << "Linked list is empty : " << endl;
	}
	else
	{
			ifstream pfile;
	pfile.open("patient.txt", ios::in);
	if (!pfile) {
		cout << "File Not Found: " << endl;
		pfile.close();
	}
	else {
		Node* temp = head;
		pfile>>id>>name>>lname>>age>>bgrp>>no;
		while (temp!=NULL)
		{
			//found++;
			if (s == id)
			{
			cout << "/////////////////////////////////////////////////////////////////////\n\n";
			cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191) << endl;
				cout <<"\t\t"<< char(186)  << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(186)  << "               HOSPITAL MANAGEMENT SYSTEM             " << char(186) << endl;
				cout <<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout<<"\t\t" << char(186) << "   Name:         "<<name<<"                      " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2  
        		cout <<"\t\t"<< char(186) << "                                                      " <<  endl;
				cout <<"\t\t"<< char(186) << "   ID:           "<<id<<"                    "<<   endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3   
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Blood Group:       "<<bgrp<<"                " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				//enter 4
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
