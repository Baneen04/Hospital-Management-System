void Admin::searchadmin() {
	int s;
	int id;
	string name,lname;
	int found = 0;
	cout << "Enter your value to search : " << endl;
	cin >> s;

	if (head==NULL)
	{
		cout << "Linked list is empty : " << endl;
	}
	else
	{
		
			ifstream afile;
	afile.open("Admin.txt", ios::in);
	if (!afile) {
		cout << "File Not Found: " << endl;
		afile.close();
	}
	else {
		afile>>id>>name>>lname;
		Node* temp = head;
		while (temp!=NULL)
		{
			found++;
			if (s == id)
			{
			cout << "/////////////////////////////////////////////////////////////////////\n\n";
			cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191) << endl;
