		myfile1.open("doctor.txt",ios::in);
	
	if(!myfile1){
		
		cout<<"File Not Found: "<<endl;
		myfile1.close();
	}
	
		myfile.open("update_doctor.txt",ios::app);
		myfile1>>id>>name>>lastname>>time>>appointment;
