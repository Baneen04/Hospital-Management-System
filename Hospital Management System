		cin >> d;
		switch (d)
		{

		case 1:
			Addreceptionist();
			break;

		case 2:
			update_receptionist();
			break;
		case 3:
			searchreceptionist();
			break;
		case 4:
			showreceptionist();
			break;
		case 5:
			patient_menue();
			break;
		case 6:
			doctor_menue();
			break;
		case 7:
			waitForEnter();
			break;

		}
	} while (d != 7);

}


class Admin:public Receptionist{
	public:
		void Addadmin();
		void showadmin();
