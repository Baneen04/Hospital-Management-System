				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
		cin >> d;
		switch (d)
		{

		case 1:
			Addadmin();
			break;

		case 2:
			update_admin();
			break;
		case 3:
			searchadmin();
			break;
		case 4:
			showadmin();
			break;
		case 5:
			patient_menue();
			break;
		case 6:
			doctor_menue();
			break;
		case 7:
			receptionist_menue();
			break;
		case 8:
			waitForEnter();
			break;

		}
	} while (d != 8);

}
void Admin::login(){
	int password=1234;
string username="Admin";
string userinput;

do{  
	cout<<"\t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ;
	cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
	cout<<"\t\t" << char(186) << "         Admin Login                                  " << char(186) << endl;
	cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
	cout<<"\t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ; 
    cout << "\t\t Enter username:";
	cin >> userinput;
	
 if (userinput == username){
	cout <<"\n";
	cout << "\t\t Enter password:";
	cin >> password;
	   if (password == 1234){
    cout << "\t\t Access Granted...";
    cout<<"\n \t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ;
    s();
}
    if (password != 1234)
    cout << "\t\t Access Denied.....Invalid Username/Password:\n";
     cout<<"\n \t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ;
}
	} while (userinput != username);
	admin_menue();
}

