				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
		cin >> d;
		switch (d)
		{

		case 1:
			Adddoctor();
			break;

		case 2:
			showdoctor();
			break;
		case 3:
			show_appointment();
			break;
		case 4:
			waitForEnter();
			break;
		}
	} while (d != 4);

}
