 }

void Doctor::show_appointment(){
	Node *newNode;
	int id;
	string name,apname;
  newNode = new Node;
 		ifstream afile;
	afile.open("Appointment.txt", ios::in);
	if (!afile) {
		cout << "No file";
	}
	else {
		afile>>id>>name>>apname;
 newNode->name = name;
 newNode->id=id;
 newNode->apname=apname;
 if(top == NULL)
 newNode->next = NULL;
 else
 newNode->next = top;
 top = newNode;
   Node *temp = top;
 while(temp != NULL)
 {			cout<<"\t\t" << char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191)<<endl ;
			cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
			cout<<"\t\t" << char(186) << "         Appoinment RECORDS                           " << char(186) << endl;
			cout<<"\t\t" << char(186) << "                                                      " << char(186) << endl;
			cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
 			cout <<"\t\t"<< char(186) << "                                                      "  << endl;
			cout<<"\t\t" << char(186) << "             Patient Id : "<<temp->id<<endl;
			cout <<"\t\t"<< char(186) << "                                                      " << endl;
			cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
			cout <<"\t\t"<< char(186) << "                                                      "  << endl;
			cout<<"\t\t" << char(186) << "             Patient name :  "<<temp->name<<endl;
			cout <<"\t\t"<< char(186) << "                                                      " << endl;
			cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
			cout <<"\t\t"<< char(186) << "                                                      "  << endl;
			cout<<"\t\t" << char(186) << "           Appointment Has been Fixed with Doctor : "<<temp->apname<<endl;
			cout <<"\t\t"<< char(186) << "                                                      " << endl;
			cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
 temp = temp -> next;
 }
}
}
