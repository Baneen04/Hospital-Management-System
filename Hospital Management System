				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				found++;
			}
			temp = temp->next;
		}}}
		if (found==0)
		{
			cout << "Record Not found " << endl;
		}
	
	waitForEnter();
}

void Patient::update_patient() {
	int found = 0;
	int up;
	string name,lname,no,bgrp;
	int id,age;
	cout << "Enter value for update : " << endl;
	cin >> up;
	if (head == NULL)
	{
		cout << "Linked List Is empty : " << endl;
	}
	else
	{
			fstream pfile;
	pfile.open("patient.txt", ios::in);
	if (!pfile) {
		cout << "File Not Found: " << endl;
		pfile.close();
	}
	else {
		Node* temp = head;
		pfile>>id>>name>>lname>>age>>bgrp>>no;
		
		while (temp != NULL)
		{

			if (up == temp->pid&&up==id)
			{
				cout << "Enter Patient Id: " << endl;
				cin >> temp->pid;
				pfile<<temp->pid;
				cout << "Enter name : " << endl;
				cin >> temp->pname;
				pfile<<temp->pname;
				cout << "Enter Last name : " << endl;
				cin >> temp->plname;
				pfile<<temp->plname;
				cout << "Enter Age : " << endl;
				cin >> temp->p_age;
				pfile<<temp->p_age;
				cout << "Enter patient blood Group : " << endl;
				cin >> temp->pblood;
				pfile<<temp->pblood;
				cout << "Enter Your Number : " << endl;
				cin >> temp->pno;
				pfile<<temp->pno;
				found++;
			}
			temp = temp->next;
		}

	}}
}
