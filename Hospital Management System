void Receptionist::searchreceptionist() {
	int s;
	int found = 0;
	int id;
	string name,lname;
	cout << "Enter your value to search : " << endl;
	cin >> s;

	if (head==NULL)
	{
		cout << "Linked list is empty : " << endl;
	}
	else
	{
		ifstream rfile;
	rfile.open("Receptionist.txt", ios::in);
	if (!rfile) {
		cout << "File Not Found: " << endl;
		rfile.close();
	}
	else {
		Node* temp = head;
			rfile>>id>>name>>lname;
	temp->rid=id;
	temp->rname=name;
	temp->rlastname=lname;
		while (temp!=NULL)
		{
			found++;
			if (s == temp->rid)
			{
			cout << "/////////////////////////////////////////////////////////////////////\n\n";
			cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191) << endl;
				cout <<"\t\t"<< char(186)  << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(186)  << "               HOSPITAL MANAGEMENT SYSTEM             " << char(186) << endl;
				cout <<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout<<"\t\t" << char(186) << "   Name:         "<<temp->rname<<"                      " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2  
        		cout <<"\t\t"<< char(186) << "                                                      " <<  endl;
				cout <<"\t\t"<< char(186) << "   ID:           "<<temp->rid<<"                    "<<   endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3   
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Salary:       "<<temp->rsal<<"                    " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				//enter 4
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Experience:   "<<temp->rexp<<"                      "  << endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				found++;
			}
			temp = temp->next;
		}
		if (found==0)
		{
			cout << "Record Not found " << endl;
		}
	}}
	waitForEnter();
}

void Receptionist::update_receptionist() {
	int found = 0;
	int up;
		int id;
	string name,lname;
	cout << "Enter value for update : " << endl;
	cin >> up;
	if (head == NULL)
	{
		cout << "Linked List Is empty : " << endl;
	}
	else
	{
			fstream rfile;
	rfile.open("Receptionist.txt", ios::in);
	if (!rfile) {
		cout << "File Not Found: " << endl;
		rfile.close();
	}
	else {
		rfile>>id>>name>>lname;
		Node* temp = head;
		while (temp != NULL)
		{

			if (up == id)
			{
				cout << "Enter Rceptionist Id: " << endl;
				cin >> temp->rid;
				rfile<<temp->rid<<endl;
				cout << "Enter name : " << endl;
				cin >> temp->rname;
				rfile<<temp->rname<<endl;
				cout << "Enter Last name : " << endl;
				cin >> temp->rlastname;
				rfile<<temp->rlastname<<endl;
				cout << "Enter Your Number : " << endl;
				cin >> temp->rno;
				rfile<<temp->rno<<endl;
				found++;
			}
			temp = temp->next;
		}

	}
	}
}

