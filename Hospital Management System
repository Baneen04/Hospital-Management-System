void Doctor::searchDoctor() {
	int s;
	int found = 0;
		string name,lname,no,time,app;
	int id;
	cout << "Enter your value to search : " << endl;
	cin >> s;

	if (head==NULL)
	{
		cout << "Linked list is empty : " << endl;
	}
	else
	{
			ifstream dfile;
	dfile.open("doctor.txt", ios::in);
	if (!dfile) {
		cout << "File Not Found: " << endl;
		dfile.close();
	}
	else {
		dfile>>id>>name>>lname>>time>>app;
		Node* temp = head;
			dfile>>id>>name>>lname>>time>>app;
		temp->dname=name;
		temp->did=id;
		temp->dlastname=lname;
		temp->time=time;
		temp->appointment=app;
		while (temp!=NULL)
		{
			//found++;
			if (s == id)
			{
			cout << "/////////////////////////////////////////////////////////////////////\n\n";
			cout <<"\n\n\n\t\t"<< char(218);  for(int i=0; i<54; i++){cout << char(205);}     cout << char(191) << endl;
				cout <<"\t\t"<< char(186)  << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(186)  << "               HOSPITAL MANAGEMENT SYSTEM             " << char(186) << endl;
				cout <<"\t\t" << char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 1  
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout<<"\t\t" << char(186) << "   Name:         "<<temp->dname<<"                      " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 2  
        		cout <<"\t\t"<< char(186) << "                                                      " <<  endl;
				cout <<"\t\t"<< char(186) << "   ID:           "<<temp->did<<"                    "<<   endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
                // enter 3   
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Salary:       "<<temp->dsal<<"                    " << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				//enter 4
        		cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(186) << "   Experience:   "<<temp->dexp<<"                      "  << endl;
				cout <<"\t\t"<< char(186) << "                                                      "  << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				cout <<"\t\t"<< char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(186) << "         Slot : " << temp->appointment<<  endl;
				cout <<"\t\t"<< char(186) << "                                                      " << char(186) << endl;
				cout <<"\t\t"<< char(192);  for(int i=0; i<54; i++){cout << char(205);}    cout << char(217) << endl;
				found++;
			}
			temp = temp->next;
		}
		if (found==0)
		{
			cout << "Record Not found " << endl;
		}
	}}
	waitForEnter();
}
void Doctor::doctor_list(){
	Node *newNode=new Node;
	string name,lname,no,time,app;
	int id;
			ifstream dfile;
	dfile.open("doctor.txt", ios::in);
	if (!dfile) {
		cout << "File Not Found: " << endl;
		dfile.close();
		
	}
	else {
		dfile>>id>>name>>lname>>time>>app;
	newNode->data=name;
	newNode->next=NULL;
   if (rear == NULL) {
      front = newNode;
	   rear = newNode;
   } else {
      rear->next = newNode;
      rear = newNode;
   }
}
Node *temp;
 temp = front;
   if ((front == NULL) && (rear == NULL)) {
      cout<<" Empty"<<endl;
      return;
   }
   	cout<<"\t=====================================================================================================\n";
   while (temp != NULL) {
		cout<<"\t|ID|"<<"\t"<<"|Name|"<<"\t\t"<<"|Last Name|"<<"\t\t"<<"|Time|"<<"\t\t"<<"|slot|"<<"\n\n\n";
		cout<<"\t"<<id<<"\t"<<name<<"\t\t  "<<lname<<"\t\t\t"<<time<<"\t\t "<<app<<"\n";
      temp = temp->next;
   }
}
